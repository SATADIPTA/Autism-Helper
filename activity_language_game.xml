<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/language_game_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <!-- Title Text -->
    <TextView
        android:id="@+id/language_game_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Language Game"
        android:textColor="#000080"
        android:textSize="60sp"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="16dp" />

    <!-- Image for Language Game -->
    <ImageView
        android:id="@+id/language_game_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/cute_img"
        android:contentDescription="Language Game Image"
        android:layout_gravity="center_horizontal" />

    <!-- Additional ImageViews or UI Components -->
    <!-- Add more ImageViews as needed -->

</LinearLayout>
